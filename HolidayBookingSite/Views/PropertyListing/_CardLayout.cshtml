@model PropertyListingModel

<div class="col">
    <div class="card shadow-sm">
        <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
        <div class="card-body">
            <h4 class="card-title">@Model.Name</h4>
            <p class="card-text">Blurb: @Model.Blurb</p>
            <p class="card-text">Location: @Model.Location</p>
            <p class="card-text">Bedrooms: @Model.NumberOfBedrooms</p>
            <p class="card-text">Cost per Night: @Model.CostPerNight</p>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <a asp-controller="PropertyListing" asp-action="ViewPropertyDetails" class="btn btn-sm btn-outline-secondary" asp-route-id="@Model.Id">View Details</a>
                </div>
            </div>
        </div>
    </div>
</div>